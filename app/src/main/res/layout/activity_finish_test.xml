<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishTestActivity">
    <TextView
        android:id="@+id/testTitle"
        android:layout_above="@id/attemptedQ"
        android:textSize="20sp"
        android:text="NEw Test"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/proximanovaregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_above="@id/testDuration"
        android:layout_marginTop="8dp"
        android:id="@+id/attemptedQ"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Attempted Questions: 20/25"
        android:fontFamily="@font/proximanovaregular"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/testDuration"
        android:layout_marginTop="8dp"
        android:layout_above="@id/testResult"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Duration: 20 min"
        android:fontFamily="@font/proximanovaregular"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/testResult"
        android:layout_marginTop="8dp"
        android:layout_above="@id/finishButton"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Result: 05/10"
        android:fontFamily="@font/proximanovaregular"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/finishButton"
        android:layout_marginTop="8dp"
        android:background="@drawable/layout_border"
        android:padding="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/opensansbold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/finish_test"/>

</RelativeLayout>