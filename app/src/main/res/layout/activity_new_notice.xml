<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewNoticeActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/selectClass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:background="@drawable/layout_border"
                android:fontFamily="@font/opensansregular"
                android:entries="@array/class_arrays"
                android:prompt="@string/select_class_prompt" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/title_edit_text"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:fontFamily="@font/opensansregular"
                    android:hint="Notice Title" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_edit_text"
                    style="@style/RegistrationEditTextStyle"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="15sp"
                    android:hint="Notice Date" />

            </com.google.android.material.textfield.TextInputLayout>
            <EditText
                android:layout_width="match_parent"
                android:inputType="text|textMultiLine"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensansregular"
                android:background="@drawable/layout_border"
                android:textSize="15sp"
                android:hint="@string/notice_description"
                android:layout_height="90dp"/>

            <TextView
                android:id="@+id/attachment"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:fontFamily="@font/opensansregular"
                android:text="Attachment (If have)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
</FrameLayout>