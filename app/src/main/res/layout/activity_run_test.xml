<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".RunTest">



    <ImageButton
        android:id="@+id/buttonSwipeLeft"
        android:layout_marginBottom="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:padding="10dp"
        android:src="@drawable/button_previous_month_selector"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/countDownText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:text="01:20:00"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/buttonSwipeRight"
        android:src="@drawable/button_next_month_selector"
        android:padding="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_below="@+id/buttonSwipeLeft"
        android:id="@+id/questionCount"
        android:layout_margin="05dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:textSize="15sp"
        android:text="05/26"
        android:layout_height="wrap_content"/>
    <com.mak.classportal.swap_plugin.CustomViewPager
        android:layout_below="@+id/questionCount"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
