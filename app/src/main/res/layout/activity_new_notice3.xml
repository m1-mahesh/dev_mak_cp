<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewNoticeActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/selectClass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:entries="@array/division_arrays"
                android:background="@drawable/layout_border"
                android:fontFamily="@font/opensansregular"
                 />

            <CheckBox
                android:id="@+id/ifOneStudent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="For Particular Students"
                android:fontFamily="@font/proximanovaregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/selectDivision"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/layout_border"
                android:prompt="@string/select_division_prompt"
                android:entries="@array/division_arrays"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/selectTxt"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/proximanovaregular"
                android:layout_width="wrap_content"
                android:text="Select Division:"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:id="@+id/divisionsLayout"
                android:columnCount="3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            </GridLayout>
            <Button
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/selectStudents"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Select Students >>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
</FrameLayout>