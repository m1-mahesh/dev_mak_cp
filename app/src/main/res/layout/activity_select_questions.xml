<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SelectQuestionsActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar_layout" />
    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="serif-monospace"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/levelOfQuestionView"
            android:visibility="gone"
            android:layout_below="@id/tvTitle"
            android:background="@drawable/circularbordersolid"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/levelHead"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Questions of: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/questionLevelText"
                android:layout_toEndOf="@id/levelHead"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-thin"
                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionList"
            android:layout_below="@id/levelOfQuestionView"
            android:layout_above="@id/saveButton"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <Button
            android:id="@+id/saveButton"
            android:layout_alignParentBottom="true"
            android:background="@color/twitter"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_button" />

    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
</FrameLayout>