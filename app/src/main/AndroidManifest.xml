<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nikvay.drnitingroup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.nikvay.drnitingroup.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">
        <activity android:name="com.nikvay.drnitingroup.PlayVideoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity android:name="com.nikvay.drnitingroup.FinaliseNotice" />
        <activity android:name="com.nikvay.drnitingroup.SelectStudents" />
        <activity android:name="com.nikvay.drnitingroup.ViewTestQuestions" />
        <activity
            android:name="com.nikvay.drnitingroup.HomeWorkDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.nikvay.drnitingroup.FinalisePaperActivity" />
        <activity android:name="com.nikvay.drnitingroup.RootActivity" />
        <activity android:name="com.nikvay.drnitingroup.permission.PermissionsActivity" />
        <activity android:name="com.nikvay.drnitingroup.BoardSelectActivity" />
        <activity android:name="com.nikvay.drnitingroup.TimetableActivity" />
        <activity android:name="com.nikvay.drnitingroup.FinishTestActivity" />
        <activity android:name="com.nikvay.drnitingroup.RunTest" />
        <activity
            android:name="com.nikvay.drnitingroup.TestsList"
            android:label="@string/title_activity_tests_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.VideoChapterListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.ViewAttendanceActivity"
            android:label="@string/title_activity_tests_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.QuickTestResult"
            android:label="@string/title_activity_tests_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.TestIntroActivity"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.nikvay.drnitingroup.NewNoticeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.NewHomeworkActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.NewTimetableActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nikvay.drnitingroup.TestResultActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.nikvay.drnitingroup.FinaliseTest" />
        <activity android:name="com.nikvay.drnitingroup.NewTestActivity" />
        <activity android:name="com.nikvay.drnitingroup.SelectQuestionsActivity" />
        <activity android:name="com.nikvay.drnitingroup.OtpActivity" />
        <activity
            android:name="com.nikvay.drnitingroup.TakeAttendance"
            android:label="@string/title_activity_take_attendance"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name="com.nikvay.drnitingroup.LoginActivity" />
        <activity android:name="com.nikvay.drnitingroup.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.nikvay.drnitingroup.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <!-- Firebase Notifications -->
        <service android:name="com.nikvay.drnitingroup.firebase.FirebaseMessageService"
            android:permission="false"
            >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>